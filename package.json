{
  "name": "better-ethereum-blockies",
  "private": "false",
  "version": "0.1.1",
  "description": "A modern ethereum blocky generator library",
  "main": "lib/index.js",
  "module": "lib/es/index.js",
  "browser": "lib/umd/index.js",
  "browserMinified": "lib/umd/index.min.js",
  "scripts": {
    "precommit": "lint-staged",
    "cleanup": "rm -rf lib",
    "build": "yarn cleanup && yarn build:cjs && yarn build:es && yarn build:umd",
    "build:cjs": "BABEL_ENV=cjs babel src/ --out-dir lib/",
    "build:es": "BABEL_ENV=es babel src/ --out-dir lib/es",
    "build:umd": "BABEL_ENV=umd rollup -c",
    "build:prod": "NODE_ENV=production yarn build",
    "build:dev": "NODE_ENV=development yarn build",
    "build:ci": "NODE_ENV=test yarn build",
    "watch": "BABEL_ENV=umd yarn cleanup && rollup -c -w",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "eslint --format junit -o reports/eslint/eslint-results.xml src",
    "flow": "flow",
    "glow": "glow",
    "glow:watch": "glow --watch",
    "flow:check": "flow check",
    "flow:ci": "flow --json | flow-junit-transformer > reports/flow/flow-results.xml",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "jest --clearCache && NODE_ENV=test jest --ci --coverage --verbose=true --testResultsProcessor='jest-junit'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdig/better-ethereum-blockies.git"
  },
  "contributors": [
    "Erin Dachtler",
    "Alex Van de Sande",
    "Raul Glogovetan <raul@glogovetan.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdig/better-ethereum-blockies/issues"
  },
  "homepage": "https://github.com/rdig/better-ethereum-blockies",
  "devDependencies": {
    "@kironeducation/flow-junit-transformer": "^0.3.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-inline-environment-variables": "^0.3.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.67.1",
    "flow-copy-source": "^1.3.0",
    "glow": "^1.2.2",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-junit": "^3.6.0",
    "jest-sandbox": "^1.1.2",
    "lint-staged": "^7.0.0",
    "plugin": "^0.3.3",
    "prettier": "^1.11.1",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=8.9.0"
  }
}
